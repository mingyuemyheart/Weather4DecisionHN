<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="@drawable/warning_bg" >

    <TextView
        android:id="@+id/city_tv"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/warning_table_header"
        android:gravity="center"
        android:text="@string/city_name"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="@dimen/warning_table_line_width"
        android:layout_height="match_parent"
        android:background="@color/warning_line_color" />

    <TextView
        android:id="@+id/warning_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/warning_table_header"
        android:gravity="center"
        android:text="@string/warning_info"
        android:textColor="@color/black"
        android:textSize="16sp" />

</LinearLayout>