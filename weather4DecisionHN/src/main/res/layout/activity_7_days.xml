<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA000000"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/main_color"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/left_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/back"
            android:onClick="onLeftButtonAction"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

        <RadioGroup
            android:id="@+id/switch_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/yubao_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="@string/yubao"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:contentDescription="@string/app_name" />

            <RadioButton
                android:id="@+id/qushi_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="@string/qushi"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/line_view"
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:contentDescription="@string/app_name" />

            <RadioButton
                android:id="@+id/more_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="@string/more"
                android:textSize="18sp" />
        </RadioGroup>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/city_weather_bg" >

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/seven_days_line"
            android:dividerHeight="1dp"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" />

        <RelativeLayout
            android:id="@+id/chart_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/seven_day_margin_chart"
            android:paddingTop="@dimen/seven_day_margin_chart"
            android:visibility="invisible" >

            <GridView
                android:id="@+id/day_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:numColumns="7" />

            <GridView
                android:id="@+id/night_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:numColumns="7" />

            <com.pmsc.weather4decision.phone.hainan.view.ChartView
                android:id="@+id/chart_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/night_grid"
                android:layout_below="@+id/day_grid" />
        </RelativeLayout>

    </FrameLayout>

</LinearLayout>